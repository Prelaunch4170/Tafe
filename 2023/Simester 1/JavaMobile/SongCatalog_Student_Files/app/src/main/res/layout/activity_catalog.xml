<?xml version="1.0" encoding="utf-8"?><!-- TODO  Define the layout components as per the provided information in the test paper -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvHeading"
        android:textSize="16pt" />

    <ListView
        android:id="@+id/ListViewCatalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.86" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonViewCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Songs Chosen" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ButtonDeleteLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Long Songs (>300secs)" />
    </LinearLayout>

</LinearLayout>