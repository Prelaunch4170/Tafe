  <system.serviceModel>
    <services>
      <service name="Enrolment_System.StudentService">
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <endpoint address="ws"  binding="wsHttpBinding" contract="Enrolment_System.IStudentService"/>
        <host>
