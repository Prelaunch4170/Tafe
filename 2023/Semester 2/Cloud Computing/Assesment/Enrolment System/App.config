<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
  </configSections>
  <connectionStrings>
    <add name="Enrolment_System.Properties.Settings.enrolmentSystemConnectionString"
      connectionString="Data Source=assessment-andrealexandrov.database.windows.net;Initial Catalog=enrolmentSystem;Persist Security Info=True;User ID=Andre;Password=password12-"
      providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
